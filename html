<body>

<header>AI Chat</header>

<div id="chat-container"></div>

<div id="input-area">
  <input type="text" id="input-text" placeholder="Ask something..." />
  <button id="send-btn">Send</button>
</div>

<script>
  const chatContainer = document.getElementById("chat-container");
  const inputText = document.getElementById("input-text");
  const sendBtn = document.getElementById("send-btn");

  function addMessage(text, type) {
    const msg = document.createElement("div");
    msg.className = "message " + type;
    msg.textContent = text;
    chatContainer.appendChild(msg);
    chatContainer.scrollTop = chatContainer.scrollHeight;
  }

  sendBtn.addEventListener("click", () => {
    const text = inputText.value.trim();
    if (!text) return;

    // Add user message
    addMessage(text, "user");
    inputText.value = "";

    // Fake AI response (placeholder)
    setTimeout(() => {
      addMessage("Thinkingâ€¦ ðŸ¤–", "ai");
    }, 300);

    // Replace with real AI response if connected
    setTimeout(() => {
      const responseText = "This is a demo response. Connect an AI to generate real replies!";
      const lastAI = chatContainer.querySelector(".ai:last-child");
      lastAI.textContent = responseText;
    }, 1200);
  });

  inputText.addEventListener("keypress", (e) => {
    if (e.key === "Enter") sendBtn.click();
  });
</script>

</body>
